<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/degre_lyt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/oval_view">

        <ImageView
            android:id="@+id/profile_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/border_oval_view" />

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="23"/>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="6dp"
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/degre_lyt"
        android:text="21-12-2017"
        />

    <TextView
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/day"
        android:text="11:21 AM"
        android:textSize="13sp"
        android:layout_toRightOf="@+id/day"
        android:layout_marginLeft="10dp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/day"
        android:layout_alignStart="@+id/day"
        android:layout_alignLeft="@+id/day"
        >

    <TextView
        android:id="@+id/min_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min: "
        android:textSize="16sp"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/min_txt"
        android:id="@+id/min_degree"
        android:text="12"
        android:textSize="16sp"
        android:paddingRight="10dp"
        android:layout_toRightOf="@id/min_txt"/>
    <TextView
        android:id="@+id/avg_txt"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avg: "
        android:textSize="16sp"
        android:layout_marginLeft="40dp"
        android:layout_alignStart="@+id/min_degree"
        android:layout_alignLeft="@+id/min_degree"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/min_txt"
        android:id="@+id/avg_degree"
        android:text="16"
        android:textSize="16sp"
        android:layout_toRightOf="@id/avg_txt"/>

    <TextView
        android:id="@+id/max_txt"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max: "
        android:textSize="16sp"
        android:layout_marginLeft="40dp"
        android:layout_alignStart="@+id/avg_degree"
        android:layout_alignLeft="@+id/avg_degree"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/min_txt"
        android:id="@+id/max_degree"
        android:text="20"
        android:textSize="16sp"
        android:layout_toRightOf="@id/max_txt"/>

    </RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/excellentConditionColor"
    android:layout_marginTop="15dp"
    android:layout_below="@+id/degre_lyt"
    />
</RelativeLayout>