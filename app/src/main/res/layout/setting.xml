<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/accounts_rly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Musabir"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:id="@+id/name"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/name"
                android:layout_marginLeft="-2dp"
                android:src="@drawable/ic_ddown"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/ic_add"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_alignParentTop="true"
            android:id="@+id/edit_profile"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Edit Profile"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:paddingLeft="30dp"/>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/edit_profile"
        android:background="@color/deviderColor"/>
        <RelativeLayout
            android:layout_below="@+id/view1"
            android:id="@+id/call_rly"
            android:paddingLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="65dp">
            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        <TextView
            android:id="@+id/call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call and SMS setting"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@color/black"
           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="3dp"
            android:text="This is for setting minimum and maximum value for each sensor to recieve a call in an emergency situation"
            android:textColor="@color/sensorTypeColor"
            android:layout_below="@+id/call"/>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/call_rly"
            android:background="@color/deviderColor"/>

        <RelativeLayout
            android:layout_below="@+id/view2"
            android:id="@+id/notification_rly"
            android:paddingLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="65dp">
            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Push notification setting"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    android:text="This is for setting minimum and maximum value for each sensor to recieve an SMS in a suspicious condition"
                    android:textColor="@color/sensorTypeColor"
                    android:layout_below="@+id/notification"/>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/notification_rly"
            android:background="@color/deviderColor"/>
        <RelativeLayout
            android:visibility="gone"
            android:layout_below="@+id/view3"
            android:id="@+id/widget_rly"
            android:paddingLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="65dp">
            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/widget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show widget on screen"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    android:text="You can see values in the main screen of the phone"
                    android:textColor="@color/sensorTypeColor"
                    android:layout_below="@+id/widget"/>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:visibility="gone"
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/widget_rly"
            android:background="@color/deviderColor"/>
        <RelativeLayout
            android:layout_below="@+id/view4"
            android:id="@+id/delete_rly"
            android:paddingLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="65dp">
            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delete account"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    android:text="Account permanently will be deleted"
                    android:textColor="@color/sensorTypeColor"
                    android:layout_below="@+id/delete"/>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/delete_rly"
            android:background="@color/deviderColor"/>
        <TextView
            android:layout_below="@+id/view5"
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Log out"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:paddingLeft="30dp"/>
    </RelativeLayout>


</RelativeLayout>
</ScrollView>