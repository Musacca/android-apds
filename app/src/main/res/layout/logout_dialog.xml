<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/circle_lyt"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/half_circle"
        ></RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="-85dp"
        android:layout_below="@+id/circle_lyt"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="280dp">
    </RelativeLayout>

    <ImageView
        android:id="@+id/language_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        app:srcCompat="@drawable/ic_logout_icon" />
    <TextView
        android:id="@+id/logout_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/language_icon"
        android:text="Do you want to log out?"/>

    <RelativeLayout
        android:id="@+id/yes_txt_lyt"
        android:layout_below="@+id/no_txt_lyt"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        >
        <TextView
            android:id="@+id/yes_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Yes"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/logout_txt"

        android:id="@+id/no_txt_lyt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/logoutTextButtonColor"

        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="50dp"
        >
        <TextView
            android:id="@+id/no_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="No"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            />
    </RelativeLayout>
</RelativeLayout>