<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inser_sensor_screen_gradient">
    <RelativeLayout
        android:layout_marginTop="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_layout">

        <TextView
            android:id="@+id/sign_in_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/signInColor"
            android:drawablePadding="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="17dp"
            android:drawableLeft="@drawable/ic_back_icon"/>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:textColor="@color/white"
        android:text="Air Quality Alarm"
        android:id="@+id/txt"
        android:layout_centerHorizontal="true"

        />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_centerInParent="true"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"/>

    <EditText
        android:id="@+id/sensor_id"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"
        android:textColor="@color/excellentConditionColor"
        android:hint="Sensor ID"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/custom_rectangle"/>
    <Button
        android:id="@+id/enter"
        android:layout_width="130dp"
        android:layout_height="37dp"
        android:textColor="@color/white"
        android:layout_below="@id/sensor_id"
        android:background="@drawable/enter_button"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:text="Enter"
        android:textSize="17sp"
        android:textAllCaps="false"/>

</RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/already_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="Do you have an account?"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/already_user"
            android:id="@+id/already_user1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"

            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text=" Click to "
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/already_user1"
            android:id="@+id/here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="#3913ab"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text=" here."
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>