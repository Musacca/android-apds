<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/rly"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/inser_sensor_screen_gradient"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="10dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_layout">

        <TextView
            android:id="@+id/sign_in_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="@color/signInColor"
            android:drawablePadding="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_back_icon"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/top_layout"
        android:layout_above="@+id/lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/white_oval"/>
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:tint="@color/greenColor"
            android:src="@drawable/logo"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >
        />

        <TextView
            android:id="@+id/county_spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:paddingLeft="15dp"
            android:textSize="15sp"
            android:gravity="left|center"
            android:background="@drawable/custom_rectangle"
            android:drawableRight="@drawable/ic_ddown"
            android:textColor="@color/colorPrimary"
            android:drawableTint="@color/colorPrimary"
            android:drawablePadding="10dp"

            />
        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="70dp"
            android:background="@color/white"/>
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/phone_number_edittext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Phone Number"
            android:layout_marginTop="30dp"
            android:textSize="15sp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:paddingLeft="15dp"
            android:inputType="number"
            android:maxLines="1"
            android:background="@drawable/custom_rectangle"
            android:textColorHint="@color/colorPrimary"

            android:textColor="@color/colorPrimary"
            />
        />
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content">


        </RelativeLayout>
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/next_btn_enternumber"

        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lyt"
        android:background="@drawable/scan_barcode_button"
        android:text="Next"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        />



</RelativeLayout>